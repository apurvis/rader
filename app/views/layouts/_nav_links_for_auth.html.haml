%ul.navbar-nav
  - if user_signed_in?
    %li.nav-item.dropdown
      = link_to(current_user.email, root_path, class: 'nav-link dropdown-toggle btn btn-outline-secondary', id: 'navbarDropdownMenuLink', data: { toggle: 'dropdown' }, 'aria-haspopup': "true", 'aria-expanded': "false")
      .dropdown-menu{ 'aria-labelledby': "navbarDropdownMenuLink" }
        = link_to 'Edit account', edit_user_registration_path, class: 'dropdown-item'
        = link_to 'Sign out', destroy_user_session_path, :method=>'delete', class: 'dropdown-item'
        - if current_user.admin?
          = link_to 'Admin', '/admin', class: 'dropdown-item'
          = link_to 'Users', users_path, class: 'dropdown-item'

  - else
    %li.nav-item= link_to 'Sign in', new_user_session_path, class: 'nav-link'
    %li.nav-item= link_to 'Sign up', new_user_registration_path, class: 'nav-link'
