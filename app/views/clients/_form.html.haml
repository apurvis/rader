= form_for(@client, html: { class: 'form-horizontal' }) do |f|
  .form-group
    = f.label :name, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :address, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_field :address, class: 'form-control'
  .form-group
    = f.label :gender, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_field :gender, class: 'form-control'
  .form-group
    = f.label :country_of_origin, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_field :country_of_origin, class: 'form-control'
  .form-group
    = f.label :started_us_residence_at, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.datetime_field :started_us_residence_at, class: 'form-control'
  .form-group
    = f.label :family_in_us?, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.check_box :family_in_us, class: 'form-control'
  .form-group
    = f.label :contact_phone_number, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.telephone_field :contact_phone_number, class: 'form-control'
  .form-group
    = f.label :notes, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_field :notes, class: 'form-control'

  .form-actions
    = f.button :submit
