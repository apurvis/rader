= form_for(@client) do |f|
  .form-inputs
    = f.label :name
    = f.text_field :name

    = f.label :address
    = f.text_field :address

    = f.label :gender
    = f.text_field :gender

    = f.label :country_of_origin
    = f.text_field :country_of_origin

    = f.label :started_us_residence_at
    = f.datetime_field :started_us_residence_at

    = f.label :family_in_us?
    = f.check_box :family_in_us

    = f.label :contact_phone_number
    = f.telephone_field :contact_phone_number

    = f.label :notes
    = f.text_field :notes

  .form-actions
    = f.button :submit
