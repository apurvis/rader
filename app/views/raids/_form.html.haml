= form_for(@raid, html: { class: 'form-horizontal' }) do |f|
  .form-group
    = f.label :type_of_raid, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.select :type_of_raid, ['home', 'street', 'workplace', 'shelter'], include_blank: false, class: 'form-control'
  .form-group
    = f.label :date_and_time_of_raid, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.datetime_field :raided_at, class: 'form-control'
  .form-group
    = f.label :address, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_field :address, class: 'form-control'
  .form-group
    = f.label :zip_code, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.number_field :zip_code, class: 'form-control'
  .form-group
    = f.label :name_of_answerer, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_field :name_of_answerer, class: 'form-control'
  .form-group
    = f.label :age_of_answerer, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.number_field :age_of_answerer, in: 1..110, class: 'form-control'
  .form-group
    = f.label :how_did_ice_make_its_presence_known?, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_area :how_did_ice_make_its_presence_known, class: 'form-control'
  .form-group
    = f.label :narrative_of_door_interaction, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_area :narrative_of_door_interaction, class: 'form-control'
  .form-group
    = f.label :narrative_of_entrance, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_area :narrative_of_entrance, class: 'form-control'
  .form-group
    = f.label :narrative_of_interaction_inside_building, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_area :narrative_of_interaction_inside_home, class: 'form-control'
  .form-group
    = f.label :how_did_ice_respond_to_any_medical_issues, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_area :response_to_medical_issues, class: 'form-control'
  .form-group
    = f.label :how_did_ice_respond_to_any_childcare_issues, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_area :response_to_childcare_issues, class: 'form-control'
  .form-group
    = f.label :were_other_arrests_made_during_raid?, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_area :other_arrests, class: 'form-control'
  .form-group
    = f.label :asked_others_for_documents_or_fingerprints?, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_area :asked_others_for_documents_or_fingerprints, class: 'form-control'

  .form-group
    = f.label :notes, class: 'col-sm-4 control-label'
    .col-sm-10
      = f.text_area :notes, class: 'form-control'

  .form-actions
    = f.button :submit
